{% extends 'base.html.twig' %}

{% block body %}
    <h1>Validator</h1>

    <table>
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ validator.description }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ validator.identifier }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ validator.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('validator_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('validator_edit', { 'id': validator.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
