{% extends 'base.html.twig' %}

{% block body %}
    <h1>Scenarios list</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for scenario in scenarios %}
            <tr>
                <td><a href="{{ path('scenario_show', { 'id': scenario.id }) }}">{{ scenario.description }}</a></td>
                <td>{{ scenario.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('scenario_show', { 'id': scenario.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('scenario_edit', { 'id': scenario.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scenario_new') }}">Create a new scenario</a>
        </li>
    </ul>
{% endblock %}
